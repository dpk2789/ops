@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<section class="section-intro padding-y-sm">
    <div class="container">

        <div class="intro-banner-wrap">
            <h1 class="display-1">Buy Best Packaging Boxes here </h1>
            <img src="~/images/banner1.jpg" class="img-fluid rounded" style="width:1000px;height:400px" />
        </div>

    </div> <!-- container //  -->
</section>

<!-- ========================= SECTION MAIN ========================= -->
<section class="section-main bg padding-y">
    <div class="container">

        <!-- ========================= SECTION  ========================= -->
        <section class="section-name padding-y-sm">
            <div class="container">

                <header class="section-heading">
                    <a href="#" class="btn btn-outline-primary float-right">See all</a>
                    <h3 class="section-title">Popular products</h3>
                </header><!-- sect-heading -->


                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-3">
                            <div href="#" class="card card-product-grid">
                                <a asp-page="Product" asp-route-name="@product.Name.Replace(" ", "-")" class="img-wrap">
                                    @if (product.ProductImages != null)
                                    {
                                        <img src="@product.ProductImages.FirstOrDefault(x=>x.Type=="main")?.RelativePath"
                                             class="card-img-top" style="width:280px;height:220px" alt="...">
                                    }
                                </a>
                                <figcaption class="info-wrap">
                                    <a href="#" class="title">@product.Name</a>
                                    <div class="price mt-1">Rs. @product.Value</div> <!-- price-wrap.// -->
                                </figcaption>
                            </div>
                        </div> <!-- col.// -->
                    }


                </div> <!-- row.// -->

            </div><!-- container // -->
        </section>
        <!-- ========================= SECTION  END// ========================= -->

    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION MAIN END// ========================= -->
