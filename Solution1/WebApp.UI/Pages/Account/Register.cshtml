@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3 row">
                <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Input.Email" class="form-control" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>           
            <div class="mb-3 row">
                <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Input.Password" class="form-control" />
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Input.ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-grid col-md-2 offset-6">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

        </form>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
